{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://local.substrate/residual-risk-register.schema.json",
  "title": "Residual Risk Register",
  "type": "object",
  "required": [
    "version",
    "risks"
  ],
  "properties": {
    "version": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "risks": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/risk_entry"
      }
    }
  },
  "$defs": {
    "risk_entry": {
      "type": "object",
      "required": [
        "risk_id",
        "packet_id",
        "description",
        "likelihood",
        "impact",
        "confidence",
        "declared_by",
        "declared_at",
        "status"
      ],
      "properties": {
        "risk_id": {
          "type": "string",
          "pattern": "^RR-[0-9]{4,}$"
        },
        "packet_id": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 3
        },
        "likelihood": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high"
          ]
        },
        "impact": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high",
            "critical"
          ]
        },
        "confidence": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high"
          ]
        },
        "declared_by": {
          "type": "string",
          "minLength": 1
        },
        "declared_at": {
          "type": "string",
          "format": "date-time"
        },
        "status": {
          "type": "string",
          "enum": [
            "open",
            "mitigated",
            "accepted",
            "transferred"
          ]
        },
        "notes": {
          "type": [
            "string",
            "null"
          ]
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_by": {
          "type": [
            "string",
            "null"
          ]
        },
        "resolution_notes": {
          "type": "string"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
