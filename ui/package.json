{
  "name": "@substrate/ai-optimized-template",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint app components lib scripts types --ext .ts,.tsx,.js --max-warnings=0",
    "typecheck": "tsc --project tsconfig.json",
    "format": "prettier --write .",
    "schema:push": "npx prisma db push",
    "test": "npm run lint && npm run typecheck",
    "test:optional-fallbacks": "node ./scripts/smoke-optional-fallbacks.mjs",
    "bootstrap:core": "npm install --omit=optional",
    "bootstrap:full": "npm install --include=optional",
    "feature:terminal:enable": "npm install --include=optional node-pty",
    "feature:e2e:enable": "npm install --include=optional playwright",
    "feature:db:enable": "npm install --include=optional @prisma/client prisma",
    "feature:core:reset": "npm install --omit=optional"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/xterm": "^6.0.0",
    "lucide-react": "^0.474.0",
    "next": "^16.1.6",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.24",
    "eslint": "^9.0.0",
    "eslint-config-next": "^16.1.6",
    "postcss": "^8.5.6",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.6.0"
  },
  "optionalDependencies": {
    "@prisma/client": "^5.13.0",
    "node-pty": "^1.1.0",
    "playwright": "^1.58.2",
    "prisma": "^5.13.0"
  }
}
